{
	"compilerOptions": {
		"jsx": "react-jsx",
		"module": "ESNext", // 使用 ESM
		"target": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": ["./"]
}
